{% extends 'base.html.twig' %}

{% block title %}{{ content.title }}{% endblock %}

{% block body %}
    <div class="ad-title" style="background-image : url({{ content.coverImage }})">
        <div class="container">
            <h1>{{ content.title }}</h1>
            <p>{{ content.description }}</p>
            <a href="{{ path('contents_play', {'slug': content.slug }) }}" target="_blank">
                <button type="button" class="btn btn-success center-block">Lancer le jeux</button>
            </a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3">
                {{ content.content }}

                <div id="carouselExampleIndicators" class="carousel slide mt-3" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in content.images %}
                            <li data-target="#carouselExampleIndicators" data-slide-to={{ loop.index0 }} {% if loop.first %}class="active"{% endif%}></li>
                        {% endfor %}    
                    </ol>
                    <div class="carousel-inner">
                        {% for image in content.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif%}">
                                <img class="d-block w-100" src="{{ image.url }}" alt="{{ image.caption }}">
                            </div>
                            
                        {% endfor %}    
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="col">
                <h1>Resum√©</h1>
                <p>Score : 200 pts</p>
                <p>Temps : 2h</p>
                <p>Tentative : 3</p>
            </div>
        </div>
    </div>

{% endblock %}