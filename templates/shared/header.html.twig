                    <i class="fa fa-bars"></i>
                </button>
            {% endif %}

            <!-- Topbar logo -->
            <a class="navbar-brand" href="{{ path('home_index') }}">
                <img src="/assets/images/logo-urps.png" alt="logo-urps-ml-paca" height="60px">
            </a>   
            
            {% if is_granted('ROLE_USER') %}
                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">
                
