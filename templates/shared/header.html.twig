{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-dismissible alert-{{ label }}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {% for message in messages %}
                <p class="mb-0">{{ message | raw }}</p>
            {% endfor %}
        </div>   
    </div>
{% endfor %}