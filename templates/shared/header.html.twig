                    <li class="nav-item ">
                        <a class="nav-link text-gray-600" href="{{ path('security_login') }}">Se connecter <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-gray-600" href="{{ path('security_register') }}">S'inscrire<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            {% endif %}  
    </div>

    </nav>
{% endblock %}


{% for label, messages in app.flashes %}
    <div class="container popup">
        <div class="alert alert-dismissible alert-{{ label }}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {% for message in messages %}
                <p class="mb-0">{{ message | raw }}</p>
            {% endfor %}
        </div>   
    </div>
{% endfor %}
