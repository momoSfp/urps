{% extends 'admin/base.html.twig' %}

{% block title %}Edition{% endblock %}

{% form_theme form 'admin/content/_collection.html.twig' %}

{% block main %}
    <div class="container ">
        <h1 class='my-5'>Modification des informations personnelles</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading">Informations générales</h2>
                        <hr>
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.age) }}
                        {{ form_row(form.email) }}
                    </div>   
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading">Autres informations</h2>
                        <hr>
                        {{ form_row(form.tutor) }}
                    </div>            
                </div>
            </div>
            <div class="col text-center mb-3">
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Mise a jour</button>         
            </div>                
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#user_tutor').select2({
                theme: "classic"
            });
        });
    </script>
{% endblock %}