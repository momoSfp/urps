{% extends 'admin/base.html.twig' %}

{% block title %}Administration serious game{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/b-1.5.6/b-colvis-1.5.6/b-flash-1.5.6/b-html5-1.5.6/r-2.2.2/datatables.min.css"/>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des serious game</h1>

        <table id="myTable" class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Créer le</th>
                    <th>Dérnière modification</th>
                    <th>Statut</th>
                    <th>Public</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for content in contents %}
                    <tr>
                        <th>{{ content.id }}</th>
                        <th>{{ content.title }}</th>
                        <th>{{ content.createdAt | date("d/m/Y H:i", "Europe/Paris") }}</th>
                        <th class="text-center"> 
                            {% if content.lastUpdateAt is null %}  
                                <p >~</p>
                            {% else %}
                                {{ content.lastUpdateAt | date("d/m/Y  H:i", "Europe/Paris") }}
                            {% endif %}
                        </th>
                        <th class="text-center">
                            {% if content.active == true %}
                                <span class="badge badge-pill badge-success">&nbsp</span> active
                            {% else %}
                                <span class="badge badge-pill badge-danger">&nbsp</span> désactivé
                            {% endif %}
                        </th>
                        <th>
                            {% if content.public == true %}
                                <span class="badge badge-pill badge-success">&nbsp</span> active
                            {% else %}
                                <span class="badge badge-pill badge-danger">&nbsp</span> désactivé
                            {% endif %}
                        </th>
                        <th>
                            <a href="{{ path('admin_contents_edit', {'id': content.id}) }}" class="btn btn-secondary"><i class="far fa-edit"></i></a>
                            <form action="{{ path('admin_contents_delete', {'id': content.id}) }}" method="post" style="display: inline-block" onsubmit="return confirm('Etes-vous sur de votre choix ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content.id) }}">
                                <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </th>
                    </tr>
                {% endfor %}
            </tbody>            
        </table>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/b-1.5.6/b-colvis-1.5.6/b-flash-1.5.6/b-html5-1.5.6/r-2.2.2/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    }
                
            );
        } );
    </script>



{% endblock %}