{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}


{% block header %}{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="my-5">Mot de passe oublié</h1>
        
        <div class="row">
            <div class="col">
                <form method="post">
            
                    <label for="inputEmail" >Adresse email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Adresse email du compte" required autofocus>
                    <br>
                    <button class="btn btn-lg btn-primary" type="submit">Envoyer</button>
            
                </form>
            </div>            
        </div>            
    </div>            

{% endblock %}
